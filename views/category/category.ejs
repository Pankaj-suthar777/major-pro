  <button class="arrow-btn arrow-right" onclick="scrollContainer(50)"><i class="fa-solid fa-arrow-right"></i></button>

  <button class="arrow-btn arrow-left" onclick="scrollContainer(-50)"><i class="fa-solid fa-arrow-left"></i></button>
</div>

  <div class="toggleSwitch">
    <div class="form-check-reverse form-switch ">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total before taxes</label>
    </div>
  </div>

<div class="container">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-1 mt-3 listingsAll">
      
<% if(cateListings[0] != undefined){ %>
        <% for(listing of cateListings) {%>
          <div class="one-card">
            <a href="/listing/<%=listing._id%>" style="text-decoration: none;">
            <div class="card col listing-card" >
                <img src="<%=listing.image.url%>" class="card-img-top" alt="img" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="listing-title"><%=listing.title%></p>
                    <p class="card-text listing-des"><%=listing.location%><br>
                    &#8377; <%=listing.price.toLocaleString('en-IN')%> / night <span><i class="tax-info">&nbsp;&nbsp; +18% GST</i></span> </p>
                    
                </div>
              </div>
            </a>
          </div>
            <%}%>
            <%} else { %>
              <div class="search">
                <h3>No Listing found</h3>
               </div>
              <%}%>
    </div>
   </div>